FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --only=production

# Copy source code
COPY . .

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S backend -u 1001

# Change ownership to nodejs user
RUN chown -R backend:nodejs /app
USER backend

EXPOSE 3000

CMD ["npm", "start"]
